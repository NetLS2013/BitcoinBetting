<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BitcoinBetting.Core.StartupPage"
             Title="Bitcoin betting"
             >
    <ContentPage.ToolbarItems>
        
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center" Orientation="Vertical" Padding="30">
            <Image Source="bitcoin.png" HorizontalOptions="Center"/>
            
            <Button Text="Registration" Command="{Binding RegisterCommnad}" />
            <Button Text="Login" Command="{Binding LoginCommnad}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>